<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="Speed units"
        android:key="speedUnitPref"
        android:summary="Choose between km/h and m/s"
        android:entries="@array/speedUnits"
        android:entryValues="@array/speedUnitValues"
        android:defaultValue="@string/speedUnit_default"/>

    <ListPreference
        android:title="Strokes per hit"
        android:key="strokePref"
        android:summary="Choose how many strokes per hit"
        android:entries="@array/strokeNumber"
        android:entryValues="@array/strokePrefValues"
        android:defaultValue="@string/strokeNumber_default"/>


</PreferenceScreen>